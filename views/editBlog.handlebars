<article class='new-page'>
  <div class='edit-form-page'>
    <div class='form-heading'>
      <h2>
        Edit Blog
      </h2>
    </div>
    <div class='form-section'>
      <form class='edit-blog-form'>
        <div class='blog-title-section'>
          <label for='blog-title'>Title</label>
          <input
            type='text'
            name='blog-title'
            id='blog-title'
            value='{{blog.title}}'
          />
        </div>
        <div class='blog-content'>
          <label for='blog-content'>Content</label>
          <textarea
            class='entry-field'
            id='blog-content'
            name='blog-content'
          >{{blog.content}}</textarea>
        </div>
        <button type='submit'>Update Blog-Post</button>
        <button type='button' class='delete-post-btn'>Delete Blog</button>
      </form>
    </div>
  </div>
</article>

{{#if loggedIn}}
  <script src='../public/js/editBlog.js'></script>
  <script src='../public/js/deleteBlog.js'></script>
{{/if}}